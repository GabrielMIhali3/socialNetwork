<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<AnchorPane prefHeight="80.0" prefWidth="520.0" style="-fx-background-color: linear-gradient(to bottom, #f7f7f7, #e9e9e9);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example._socialnetwork_.controller.ProfilController">
    <children>

        <!-- Profil Circle -->
        <Circle fill="#d0d0d0" layoutX="50.0" layoutY="40.0" radius="30.0" stroke="WHITE" strokeType="INSIDE" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 5, 0, 2, 2);" />

        <!-- Nume și Detalii -->
        <VBox layoutX="90.0" layoutY="20.0" spacing="5">
            <children>
                <Label fx:id="name" style="-fx-font-size: 18px; -fx-text-fill: #333333;" text="Mihali Gabriel" />
                <Label fx:id="username" style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="username" />
            </children>
        </VBox>

        <!-- Butoane de acțiune -->
        <Button layoutX="450.0" layoutY="25.0" style="-fx-background-color: transparent; -fx-padding: 8px;">
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                    <image>
                        <Image url="@../images/messenger.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button layoutX="400.0" layoutY="25.0" style="-fx-background-color: transparent; -fx-padding: 8px;" onAction="#handleDeletePrieten">
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                    <image>
                        <Image url="@../images/delete.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

    </children>
</AnchorPane>
